{
  "name": "monorepo-hono-next",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
   "dev": "concurrently -n web,api -c cyan,magenta \"bun run --filter=web dev\" \"bun run --filter=api dev\"",
    "dev:api": "bun run --filter=api dev",
    "dev:web": "bun run --filter=web dev",
    "build": "bun run --filter='*' build",
    "clean": "rm -rf node_modules bun.lock",
    "validate:api": "cd apps/api && bun run validate",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bun": "latest",
    "husky": "^8.0.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "hono": "^4.10.7"
  }
}
