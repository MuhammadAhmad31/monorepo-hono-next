{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "ES2017",
    "module": "esnext",
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "shared/*": ["../../packages/shared/src/*"],
      "@api/*": ["../api/src/*"]
    },
    "baseUrl": ".",
    "rootDir": "../../"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "../api/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}